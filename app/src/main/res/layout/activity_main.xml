<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".widget.MainActivity">
    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:background="#36EEB9"
      app:navigationIcon="@color/colorNull">
        <TextView
          android:id="@+id/toolbarTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="1"
          android:text="每日打卡"
          android:textAppearance="@android:style/TextAppearance.WindowTitle"
          android:textSize="22sp"
          android:visibility="visible" />
    </androidx.appcompat.widget.Toolbar>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
        <androidx.cardview.widget.CardView
          android:layout_marginTop="@dimen/qb_px_16"
          android:id="@+id/top_cardView"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_156"
          android:layout_margin="@dimen/qb_px_16"
          app:cardCornerRadius="@dimen/qb_px_16"

          >
          <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/logo"/>
        </androidx.cardview.widget.CardView>
      <RelativeLayout
        android:layout_marginStart="@dimen/qb_px_32"
        android:layout_marginEnd="@dimen/qb_px_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
          android:id="@+id/input_introduction_textview"
          android:layout_width="@dimen/qb_px_96"
          android:layout_height="@dimen/qb_px_32"
          app:cardBackgroundColor="#7136DEB9"
          app:cardCornerRadius="@dimen/qb_px_16"
          app:cardElevation="@dimen/qb_px_0"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填报说明"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="@dimen/qb_px_12"
            android:paddingEnd="@dimen/qb_px_12"
            />
        </androidx.cardview.widget.CardView>

          <TextView
            android:layout_toStartOf="@+id/deadline_textView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止时间："
            android:layout_centerVertical="true"
            />
          <TextView
            android:id="@+id/deadline_textView"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020-06-13"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
      </RelativeLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/qb_px_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学号"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <TextView
            android:id="@+id/id_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="2017213074"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
          android:layout_marginTop="@dimen/qb_px_8"
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="钟伟民"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/phoneNum_container"
          android:layout_marginTop="@dimen/qb_px_8"
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系电话*"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <EditText
            android:id="@+id/phoneNum_Edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="17670530020"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:paddingTop="@dimen/qb_px_0"
            android:paddingEnd="@dimen/qb_px_0"
            android:paddingBottom="@dimen/qb_px_0"
            android:paddingStart="@dimen/qb_px_0"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/detail_location_container"
          android:layout_marginTop="@dimen/qb_px_8"
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="居住地详细地址*"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <EditText
            android:id="@+id/detail_location_Edittext"
            tools:text="重庆市南岸区重庆邮电大学"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:paddingTop="@dimen/qb_px_0"
            android:paddingEnd="@dimen/qb_px_0"
            android:paddingBottom="@dimen/qb_px_0"
            android:paddingStart="@dimen/qb_px_0"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
          android:layout_marginTop="@dimen/qb_px_8"
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="体温是否正常*"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <TextView
            android:id="@+id/temperature_select_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请选择"
            android:drawableEnd="@mipmap/next"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:paddingTop="@dimen/qb_px_0"
            android:paddingEnd="@dimen/qb_px_0"
            android:paddingBottom="@dimen/qb_px_0"
            android:paddingStart="@dimen/qb_px_0"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
          android:layout_marginTop="@dimen/qb_px_8"
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="自己或亲友是否为疑似/确诊病例*"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <TextView
            android:id="@+id/patient_select_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请选择"
            android:drawableEnd="@mipmap/next"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:paddingTop="@dimen/qb_px_0"
            android:paddingEnd="@dimen/qb_px_0"
            android:paddingBottom="@dimen/qb_px_0"
            android:paddingStart="@dimen/qb_px_0"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/extras_container"
          android:layout_marginTop="@dimen/qb_px_8"
          android:layout_marginStart="@dimen/qb_px_32"
          android:layout_marginEnd="@dimen/qb_px_32"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qb_px_32"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#CA0f1f0f"
            />
          <EditText
            android:id="@+id/extras_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorNull"
            android:textColor="#CA0f1f0f"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:hint="填写其他需要说明的情况"
            android:paddingTop="@dimen/qb_px_0"
            android:paddingEnd="@dimen/qb_px_0"
            android:paddingBottom="@dimen/qb_px_0"
            android:paddingStart="@dimen/qb_px_0"
            />
          <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

      </LinearLayout>


      <androidx.cardview.widget.CardView
        android:id="@+id/report_container_cardView"
        android:layout_marginTop="@dimen/qb_px_32"
        android:layout_width="@dimen/qb_px_128"
        android:layout_height="@dimen/qb_px_32"
        app:cardBackgroundColor="#FF66EEB9"
        app:cardCornerRadius="@dimen/qb_px_8"
        android:layout_gravity="center_horizontal"
        >
        <TextView
          android:id="@+id/report_textView"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="打卡"
          android:layout_gravity="center"
          android:gravity="center"
          android:textColor="@color/colorWhite"
          android:textSize="16sp"
          />
      </androidx.cardview.widget.CardView>

      <TextView
        android:id="@+id/history_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史填报"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/qb_px_16"
        android:textColor="#CA0f1f0f"
        android:paddingBottom="@dimen/qb_px_16"
        />



    </LinearLayout>
  </ScrollView>



</LinearLayout>