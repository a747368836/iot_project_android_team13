<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qb_px_8"
    app:cardCornerRadius="@dimen/qb_px_16"
    app:cardElevation="@dimen/qb_px_4">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingTop="@dimen/qb_px_4"
      android:paddingBottom="@dimen/qb_px_16"
      android:paddingStart="@dimen/qb_px_16"
      android:paddingEnd="@dimen/qb_px_16"
      android:orientation="vertical">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="@dimen/qb_px_32"
          android:layout_height="@dimen/qb_px_32"
          android:src="@mipmap/report_logo" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/qb_px_16"
          android:layout_gravity="center_vertical"
          android:text="打卡记录"
          android:textColor="@color/colorGray"
          android:textSize="14sp" />


      </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/qb_px_4"
        android:background="@color/colorGray" />

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_16">
        <TextView
          android:id="@+id/tip_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorGray"
          android:text="姓名" />
        <TextView
          android:id="@+id/text_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentTop="true"
          tools:text="钟伟民" />
        <TextView
          android:id="@+id/tip_location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/qb_px_16"
          android:layout_below="@id/tip_name"
          android:text="打卡地点"
          android:textColor="@color/colorGray" />
        <TextView
          android:id="@+id/text_location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/qb_px_16"
          android:layout_alignParentEnd="true"
          android:layout_below="@id/text_name"
          android:gravity="center_vertical"
          tools:text="重庆市，重庆市，南岸区" />
        <TextView
          android:id="@+id/tip_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/qb_px_16"
          android:layout_below="@id/tip_location"
          android:text="打卡时间"
          android:textColor="@color/colorGray" />
        <TextView
          android:id="@+id/text_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/qb_px_16"
          android:layout_alignParentEnd="true"
          android:layout_below="@id/tip_location"
          android:gravity="center_vertical"
          tools:text="2020-06-24 21:32:46" />
      </RelativeLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>